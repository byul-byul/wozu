run:
	docker-compose up

build:
	docker-compose up --build

detach:
	docker-compose up -d

bdetach:
	docker-compose up -d --build

down:
	docker-compose down

# โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ
